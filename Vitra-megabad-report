    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0/dist/chartjs-plugin-datalabels.min.js"></script>
    <script>
        // Ensure Chart.js plugins are registered
        Chart.register(ChartDataLabels);

        document.addEventListener('DOMContentLoaded', () => {
            const sidebarLinks = document.querySelectorAll('.sidebar-link');
            const sections = document.querySelectorAll('.section');
            const progressBar = document.getElementById('progressBar');
            const backToTopButton = document.getElementById('backToTop');
            const menuToggle = document.getElementById('menuToggle');
            const sidebar = document.getElementById('sidebar');

            // Toggle sidebar for mobile
            menuToggle.addEventListener('click', () => {
                sidebar.classList.toggle('active');
            });

            const updateActiveLink = () => {
                let currentActiveSectionId = '';
                sections.forEach(section => {
                    const rect = section.getBoundingClientRect();
                    // Consider section active if its middle point is within the middle third of the viewport
                    const viewportMid = window.innerHeight / 2;
                    if (rect.top <= viewportMid && rect.bottom >= viewportMid) {
                        currentActiveSectionId = section.id;
                    }
                });

                sidebarLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('data-section') === currentActiveSectionId) {
                        link.classList.add('active');
                    }
                });
            };

            function updateProgressBar() {
                const scrollTotal = document.documentElement.scrollHeight - document.documentElement.clientHeight;
                if (scrollTotal <= 0) {
                    progressBar.style.width = '0%';
                    return;
                }
                const scrolled = (window.pageYOffset / scrollTotal) * 100;
                
                let sidebarWidth = 0;
                if (window.innerWidth > 1024) {
                    sidebarWidth = sidebar.offsetWidth;
                }
                const availableWidthForProgressBar = window.innerWidth - sidebarWidth;
                const currentProgressBarWidthPx = (scrolled / 100) * availableWidthForProgressBar;
                
                progressBar.style.left = `${sidebarWidth}px`;
                progressBar.style.width = `${currentProgressBarWidthPx}px`;
            }

            const toggleBackToTop = () => {
                if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
                    backToTopButton.classList.add("visible");
                } else {
                    backToTopButton.classList.remove("visible");
                }
            };

            window.addEventListener('scroll', () => {
                updateActiveLink();
                updateProgressBar();
                toggleBackToTop();
            });

            sidebarLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('data-section');
                    const targetSection = document.getElementById(targetId);
                    if (targetSection) {
                        const headerOffset = 100;
                        const elementPosition = targetSection.getBoundingClientRect().top;
                        const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

                        window.scrollTo({
                            top: offsetPosition,
                            behavior: 'smooth'
                        });

                        if (window.innerWidth <= 1024) {
                            sidebar.classList.remove('active');
                        }
                    }
                });
            });

            updateActiveLink();
            updateProgressBar();
            toggleBackToTop();

            backToTopButton.addEventListener('click', (e) => {
                e.preventDefault();
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });

            document.addEventListener('click', function(event) {
                const isSidebarActive = sidebar.classList.contains('active');
                const isClickInsideSidebar = sidebar.contains(event.target);
                const isClickOnMenuToggle = menuToggle.contains(event.target);

                if (isSidebarActive && window.innerWidth <= 1024 && !isClickInsideSidebar && !isClickOnMenuToggle) {
                    sidebar.classList.remove('active');
                }
            });

            // Chart.js Configuration
            Chart.defaults.font.family = "'Roboto', sans-serif";
            Chart.defaults.plugins.tooltip.boxPadding = 8;
            Chart.defaults.plugins.legend.labels.usePointStyle = true;
            Chart.defaults.plugins.datalabels.color = '#fff';
            Chart.defaults.borderColor = 'rgba(255, 255, 255, 0.2)';
            Chart.defaults.color = '#F0F0F0';
            Chart.defaults.responsive = true;
            Chart.defaults.maintainAspectRatio = false;

            // Helper function to get computed CSS variable values
            function getCssVarValue(varName) {
                return getComputedStyle(document.documentElement).getPropertyValue(varName).trim();
            }

            // Helper function to create gradient for charts using resolved CSS values
            function getGradient(ctx, chartArea, colorStartVarName, colorEndVarName) {
                if (!chartArea) {
                    return getCssVarValue(colorStartVarName); // Fallback to solid color
                }
                const gradient = ctx.createLinearGradient(0, chartArea.bottom, 0, chartArea.top);
                gradient.addColorStop(0, getCssVarValue(colorEndVarName));
                gradient.addColorStop(1, getCssVarValue(colorStartVarName));
                return gradient;
            }

            // Data for charts (from previously provided CSVs and Py scripts)
            const competitorTrafficData = {
                labels: ['Megabad', 'Bernstein-Badshop', 'Badshop', 'Skybad', 'Baddepot', 'Neuesbad'],
                monthlyVisits: [1200, 233.6, 217.1, 202.6, 101.7, 92.7]
            };

            const vitraSearchGermanyData = {
                labels: ['vitra waschbecken', 'vitra wc', 'vitra armatur', 'vitra spülkasten', 'vitra accessoires'],
                monthlySearchVolume: [590, 590, 320, 260, 170]
            };

            const trafficComparisonData = {
                channels: ['Organic', 'Direct', 'Paid', 'Referrals', 'Display Ads', 'Social', 'Email'],
                reuter: [41, 32, 19, 4, 1, 2, 0],
                megabad: [20.35, 50.75, 15, 8, 2, 2.5, 1.4]
            };

            const germanBathroomKeywordsData = {
                keywords: ['waschbecken', 'badmöbel', 'badewanne', 'duschkabine', 'spiegelschrank', 'badezimmer'],
                monthlyVolume: [74000, 44000, 43000, 35000, 23000, 40500],
                competitionMap: {
                    'Very High': getCssVarValue('--danger'),
                    'High': getCssVarValue('--warning'),
                    'Medium': getCssVarValue('--secondary')
                },
                competitionLevel: ['Very High', 'High', 'High', 'Medium', 'Medium', 'High']
            };

            // Chart Initialization Wrapper
            const createChart = (canvasId, type, data, options, plugins) => {
                const ctx = document.getElementById(canvasId)?.getContext('2d');
                if (ctx) {
                    const existingChart = Chart.getChart(canvasId);
                    if (existingChart) {
                        existingChart.destroy();
                    }
                    return new Chart(ctx, { type, data, options, plugins });
                } else {
                    console.error(`Canvas element with ID '${canvasId}' not found or context not available.`);
                    return null;
                }
            };

            // All Chart Definitions
            const renderAllCharts = () => {
                // 1. Executive Summary Chart: Megabad Aylık Trafik Dağılımı ve Gelir Analizi
                createChart('executiveSummaryChart', 'bar', {
                    labels: trafficComparisonData.channels,
                    datasets: [{
                        label: 'Megabad Trafik Dağılımı (%)',
                        data: trafficComparisonData.megabad,
                        backgroundColor: (context) => getGradient(context.chart.ctx, context.chart.chartArea, '--gradient-1-start', '--gradient-1-end'),
                        borderColor: getCssVarValue('--primary'),
                        borderWidth: 1
                    }]
                }, {
                    responsive: true, maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        title: { display: true, text: 'Megabad Trafik Kanalı Dağılımı', font: { size: 16, weight: 'bold' }, color: getCssVarValue('--light') },
                        datalabels: { anchor: 'end', align: 'end', formatter: (value) => value + '%', font: { weight: 'bold', size: 10 } }
                    },
                    scales: {
                        x: { title: { display: true, text: 'Trafik Kanalı', color: getCssVarValue('--light-muted') }, grid: { display: false }, ticks: { color: getCssVarValue('--light-muted') } },
                        y: { title: { display: true, text: 'Yüzde (%)', color: getCssVarValue('--light-muted') }, beginAtZero: true, grid: { color: 'rgba(255,255,255,0.15)' }, ticks: { callback: function(value) { return value + '%'; }, color: getCssVarValue('--light-muted') } }
                    }
                }, [ChartDataLabels]);

                // 2. Loyalty Market Chart (Müşteri Geri Bildirimleri) - Now just "Megabad Müşteri Geri Bildirimleri Dağılımı" in the current report context
                createChart('loyaltyMarketChart', 'doughnut', {
                    labels: ['Google Reviews (4.2/5)', 'Trustpilot (3.8/5)', 'Diğer Olumlu', 'Diğer Olumsuz'],
                    datasets: [{
                        data: [75, 25, 15, 10],
                        backgroundColor: [
                            getCssVarValue('--primary'),
                            getCssVarValue('--warning'),
                            getCssVarValue('--secondary'),
                            getCssVarValue('--danger')
                        ],
                        borderColor: getCssVarValue('--background'),
                        borderWidth: 2
                    }]
                }, {
                    responsive: true, maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'top', labels: { color: getCssVarValue('--light-muted') } },
                        title: { display: true, text: 'Megabad Müşteri Geri Bildirimleri Dağılımı', font: { size: 16, weight: 'bold' }, color: getCssVarValue('--light') },
                        datalabels: {
                            formatter: (value, ctx) => {
                                let sum = ctx.chart.data.datasets[0].data.reduce((a, b) => a + b, 0);
                                let percentage = (value * 100 / sum).toFixed(0) + "%";
                                return percentage;
                            },
                            color: getCssVarValue('--light'),
                            font: { weight: 'bold', size: 12 }
                        }
                    }
                }, [ChartDataLabels]);

                // 3. Traffic Channel Comparison Chart (Reuter vs Megabad)
                createChart('trafficChannelComparisonChart', 'bar', {
                    labels: trafficComparisonData.channels,
                    datasets: [{
                        label: 'Megabad (%)',
                        data: trafficComparisonData.megabad,
                        backgroundColor: (context) => getGradient(context.chart.ctx, context.chart.chartArea, '--gradient-1-start', '--gradient-1-end'),
                        borderColor: getCssVarValue('--primary'),
                        borderWidth: 1
                    }, {
                        label: 'Reuter (%)',
                        data: trafficComparisonData.reuter,
                        backgroundColor: (context) => getGradient(context.chart.ctx, context.chart.chartArea, '--gradient-2-start', '--gradient-2-end'),
                        borderColor: getCssVarValue('--warning'),
                        borderWidth: 1
                    }]
                }, {
                    responsive: true, maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'top', labels: { color: getCssVarValue('--light-muted') } },
                        title: { display: true, text: 'Megabad vs Reuter Trafik Kanalı Dağılımı (%)', font: { size: 16, weight: 'bold' }, color: getCssVarValue('--light') },
                        datalabels: { formatter: (value) => value + '%', font: { weight: 'bold', size: 10 } }
                    },
                    scales: {
                        x: { title: { display: true, text: 'Kanal', color: getCssVarValue('--light-muted') }, grid: { display: false }, ticks: { color: getCssVarValue('--light-muted') } },
                        y: { title: { display: true, text: 'Yüzde (%)', color: getCssVarValue('--light-muted') }, beginAtZero: true, grid: { color: 'rgba(255,255,255,0.15)' }, ticks: { callback: function(value) { return value + '%'; }, color: getCssVarValue('--light-muted') } }
                    }
                }, [ChartDataLabels]);

                // 4. VitrA Search Volume Chart
                createChart('vitraSearchVolumeChart', 'bar', {
                    labels: vitraSearchGermanyData.labels,
                    datasets: [{
                        label: 'Aylık Arama Hacmi',
                        data: vitraSearchGermanyData.monthlySearchVolume,
                        backgroundColor: (context) => getGradient(context.chart.ctx, context.chart.chartArea, '--gradient-1-start', '--gradient-1-end'),
                        borderColor: getCssVarValue('--primary'),
                        borderWidth: 1
                    }]
                }, {
                    responsive: true, maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        title: { display: true, text: 'VitrA Almanya Arama Hacmi (Seçili Anahtar Kelimeler)', font: { size: 16, weight: 'bold' }, color: getCssVarValue('--light') },
                        datalabels: { anchor: 'end', align: 'end', formatter: (value) => value.toLocaleString(), font: { weight: 'bold', size: 10 } }
                    },
                    scales: {
                        x: { title: { display: true, text: 'Anahtar Kelime', color: getCssVarValue('--light-muted') }, grid: { display: false }, ticks: { color: getCssVarValue('--light-muted'),  maxRotation: 45, minRotation: 45 } },
                        y: { title: { display: true, text: 'Aylık Hacim', color: getCssVarValue('--light-muted') }, beginAtZero: true, grid: { color: 'rgba(255,255,255,0.15)' }, ticks: { color: getCssVarValue('--light-muted') } }
                    }
                }, [ChartDataLabels]);

                // 5. Competitor Traffic Analysis Chart
                createChart('competitorTrafficAnalysisChart', 'bar', {
                    labels: competitorTrafficData.labels,
                    datasets: [{
                        label: 'Aylık Ziyaret (Bin)',
                        data: competitorTrafficData.monthlyVisits,
                        backgroundColor: (context) => {
                            const chart = context.chart;
                            const { ctx, chartArea } = chart;
                            if (!chartArea) { return getCssVarValue('--primary'); }
                            return context.raw.label === 'Megabad' ? getGradient(ctx, chartArea, '--gradient-1-start', '--gradient-1-end') : getCssVarValue('--warning');
                        },
                        borderColor: (context) => {
                            return context.raw.label === 'Megabad' ? getCssVarValue('--primary') : getCssVarValue('--warning');
                        },
                        borderWidth: 1
                    }]
                }, {
                    responsive: true, maintainAspectRatio: false,
                    indexAxis: 'y',
                    plugins: {
                        legend: { display: false },
                        title: { display: true, text: 'Rakipler Arası Aylık Trafik Analizi', font: { size: 16, weight: 'bold' }, color: getCssVarValue('--light') },
                        datalabels: { anchor: 'end', align: 'end', formatter: (value) => value.toLocaleString() + 'k', font: { weight: 'bold', size: 10 } }
                    },
                    scales: {
                        x: { title: { display: true, text: 'Aylık Ziyaret (Bin)', color: getCssVarValue('--light-muted') }, beginAtZero: true, grid: { color: 'rgba(255,255,255,0.15)' }, ticks: { callback: function(value) { return value.toLocaleString() + 'k'; }, color: getCssVarValue('--light-muted') } },
                        y: { title: { display: true, text: 'Rakip', color: getCssVarValue('--light-muted') }, grid: { display: false }, ticks: { color: getCssVarValue('--light-muted') } }
                    }
                }, [ChartDataLabels]);

                // 6. Keyword Traffic Performance Chart
                createChart('keywordTrafficChart', 'bar', {
                    labels: ['megabad', 'badewanne (küvet)', 'aufsatzwaschbecken (tezgah üstü lavabo)', 'waschbecken (lavabo)', 'spiegelschrank bad (banyo aynalı dolap)'],
                    datasets: [{
                        label: 'Tahmini Trafik',
                        data: [59200, 10044, 3670, 2662, 1158],
                        backgroundColor: (context) => getGradient(context.chart.ctx, context.chart.chartArea, '--gradient-1-start', '--gradient-1-end'),
                        borderColor: getCssVarValue('--secondary'),
                        borderWidth: 1
                    }]
                }, {
                    responsive: true, maintainAspectRatio: false,
                    indexAxis: 'y',
                    plugins: {
                        legend: { display: false },
                        title: { display: true, text: 'Megabad.com Anahtar Kelime Tahmini Trafik Performansı', font: { size: 16, weight: 'bold' }, color: getCssVarValue('--light') },
                        datalabels: { anchor: 'end', align: 'end', formatter: (value) => value.toLocaleString(), font: { weight: 'bold', size: 10 } }
                    },
                    scales: {
                        x: { title: { display: true, text: 'Tahmini Trafik', color: getCssVarValue('--light-muted') }, beginAtZero: true, grid: { color: 'rgba(255,255,255,0.15)' }, ticks: { callback: function(value) { return value.toLocaleString(); }, color: getCssVarValue('--light-muted') } },
                        y: { title: { display: true, text: 'Anahtar Kelime', color: getCssVarValue('--light-muted') }, grid: { display: false }, ticks: { color: getCssVarValue('--light-muted') } }
                    }
                }, [ChartDataLabels]);

                // 7. Page Traffic Percentage Chart
                createChart('pageTrafficChart', 'bar', {
                    labels: ['Ana Sayfa', 'Badarmaturen (Banyo Armatürleri)', 'Badmoebel (Banyo Mobilyaları)', 'Heizung/Badheizkoerper (Isıtma/Banyo Radyatörü)', 'Badaccessoires (Banyo Aksesuarları)'],
                    datasets: [{
                        label: 'Trafik Yüzdesi (%)',
                        data: [21.63, 9.22, 7.26, 5.14, 4.08],
                        backgroundColor: (context) => {
                            const chart = context.chart;
                            const { ctx, chartArea } = chart;
                            if (!chartArea) { return getCssVarValue('--primary'); }
                            return [
                                getGradient(ctx, chartArea, '--gradient-1-start', '--gradient-1-end'),
                                getGradient(ctx, chartArea, '--gradient-2-start', '--gradient-2-end'),
                                getGradient(ctx, chartArea, '--gradient-1-start', '--gradient-1-end'),
                                getGradient(ctx, chartArea, '--gradient-2-start', '--gradient-2-end'),
                                getGradient(ctx, chartArea, '--gradient-1-start', '--gradient-1-end')
                            ];
                        },
                        borderColor: [
                            getCssVarValue('--primary'),
                            getCssVarValue('--warning'),
                            getCssVarValue('--secondary'),
                            getCssVarValue('--danger'),
                            getCssVarValue('--primary')
                        ],
                        borderWidth: 1
                    }]
                }, {
                    responsive: true, maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        title: { display: true, text: 'Megabad.com Sayfa Başına Trafik Yüzdesi', font: { size: 16, weight: 'bold' }, color: getCssVarValue('--light') },
                        datalabels: { anchor: 'end', align: 'end', formatter: (value) => value + '%', font: { weight: 'bold', size: 10 } }
                    },
                    scales: {
                        x: { title: { display: true, text: 'Sayfa', color: getCssVarValue('--light-muted') }, grid: { display: false }, ticks: { color: getCssVarValue('--light-muted') } },
                        y: { title: { display: true, text: 'Trafik Yüzdesi (%)', color: getCssVarValue('--light-muted') }, beginAtZero: true, grid: { color: 'rgba(255,255,255,0.15)' }, ticks: { callback: function(value) { return value + '%'; }, color: getCssVarValue('--light-muted') } }
                    }
                }, [ChartDataLabels]);

                // 8. German Bathroom Keywords Bubble Chart
                const bubbleChartDatasets = [];
                const competitionLevels = ['Very High', 'High', 'Medium'];
                
                competitionLevels.forEach(level => {
                    const filteredData = germanBathroomKeywordsData.keywords.map((keyword, index) => {
                        if (germanBathroomKeywordsData.competitionLevel[index] === level) {
                            return {
                                x: keyword,
                                y: germanBathroomKeywordsData.monthlyVolume[index],
                                r: Math.sqrt(germanBathroomKeywordsData.monthlyVolume[index] / 200)
                            };
                        }
                        return null;
                    }).filter(item => item !== null);

                    bubbleChartDatasets.push({
                        label: level,
                        data: filteredData,
                        backgroundColor: germanBathroomKeywordsData.competitionMap[level],
                        borderColor: getCssVarValue('--background'),
                        borderWidth: 2
                    });
                });

                createChart('germanBathroomKeywordsBubbleChart', 'bubble', {
                    labels: germanBathroomKeywordsData.keywords,
                    datasets: bubbleChartDatasets
                }, {
                    responsive: true, maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: {
                                color: getCssVarValue('--light-muted'),
                                usePointStyle: true,
                            },
                            title: {
                                display: true,
                                text: 'Rekabet Seviyesi',
                                font: { weight: 'bold', color: getCssVarValue('--light') }
                            }
                        },
                        title: {
                            display: true,
                            text: 'Alman Banyo Anahtar Kelime Analizi - Hacim ve Rekabet',
                            font: { size: 16, weight: 'bold' },
                            color: getCssVarValue('--light')
                        },
                        datalabels: {
                            formatter: (value) => {
                                if (value.y >= 1000000) return `${(value.y / 1000000).toFixed(1)}m`;
                                if (value.y >= 1000) return `${(value.y / 1000).toFixed(0)}k`;
                                return String(value.y);
                            },
                            color: getCssVarValue('--light'),
                            font: { weight: 'bold', size: 10 },
                            anchor: 'end', align: 'end', offset: 5
                        }
                    },
                    scales: {
                        x: {
                            title: { display: true, text: 'Anahtar Kelimeler', color: getCssVarValue('--light-muted') },
                            grid: { display: false },
                            ticks: { color: getCssVarValue('--light-muted'),  maxRotation: 0, minRotation: 0 }
                        },
                        y: {
                            title: { display: true, text: 'Aylık Hacim', color: getCssVarValue('--light-muted') },
                            beginAtZero: true,
                            grid: { color: 'rgba(255,255,255,0.15)' },
                            ticks: {
                                callback: function(value) {
                                    if (value >= 1000000) return `${(value / 1000000).toFixed(1)}m`;
                                    if (value >= 1000) return `${(value / 1000).toFixed(0)}k`;
                                    return value.toLocaleString();
                                },
                                color: getCssVarValue('--light-muted')
                            }
                        }
                    }
                }, [ChartDataLabels]);
            };

            // Initial render of all charts
            renderAllCharts();

            // Re-render charts on window resize to apply gradients and responsive adjustments
            window.addEventListener('resize', renderAllCharts);
        });
    </script>
</body>
</html>
